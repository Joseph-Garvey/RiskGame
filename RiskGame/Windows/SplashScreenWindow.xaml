<Window x:Class="RiskGame.Windows.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RiskGame.Windows"
        mc:Ignorable="d"
        Title="SplashScreenWindow" AllowsTransparency="True" WindowStyle="None"
        WindowStartupLocation="CenterScreen" Height="210" Width="400">
    <StackPanel>
        <Image Source="../Images/RiskThumbnail.jpg"></Image>
        <ProgressBar x:Name="progressBar" Height="20" Background="LightGray"></ProgressBar>
    </StackPanel>
</Window>
