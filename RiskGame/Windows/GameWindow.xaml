                    </Grid>
                    <Border Height="20" BorderThickness="2" BorderBrush="Black">
                        <ProgressBar x:Name="pb_Timer" Minimum="0"></ProgressBar>
                    </Border>
                    <!-- UI Panel -->
                    <Border BorderBrush="Black" BorderThickness="2" Width="1280" Height="180">
                        <StackPanel x:Name="panel_UI" Orientation="Horizontal" Background="Orange">
                            <StackPanel.Resources>
                                <Style TargetType="Border" x:Key="brdDefault">
                                    <Setter Property="BorderBrush" Value="Black"></Setter>
                                    <Setter Property="BorderThickness" Value="2"></Setter>
                                    <Setter Property="Margin" Value="5"></Setter>
                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                </Style>
                                <Style TargetType="Border" x:Key="brd_CornerCurve" BasedOn="{StaticResource brdDefault}">
                                    <Setter Property="CornerRadius" Value="15"></Setter>
                                    <Setter Property="Background" Value="#7F00D1FF"></Setter>
                                </Style>
                            </StackPanel.Resources>
                            <!-- Player Panel -->
                            <Border x:Name="brd_Players" Margin="15,0,0,0" Style="{StaticResource brdDefault}">
                                <StackPanel x:Name="panel_Players"  Style="{StaticResource panel_Background}">
                                    <StackPanel.Resources>
                                        <!-- Label Styles -->
                                        <Style TargetType="Label" x:Key="lblBase">
                                            <Setter Property="FontSize" Value="12"></Setter>
                                            <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                        </Style>
                                        <Style TargetType="Label" x:Key="lblPlayerName" BasedOn="{StaticResource lblBase}" >
                                            <Setter Property="Width" Value="75"></Setter>
                                            <Setter Property="Margin" Value="5,0,0,0"></Setter>
                                        </Style>
                                        <Style TargetType="Label" x:Key="lblOwned" BasedOn="{StaticResource lblBase}">
                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                            <Setter Property="Width" Value="24"></Setter>
                                            <Setter Property="Content" Value="00"></Setter>
                                        </Style>
                                        <Style TargetType="Label" x:Key="lblStrength" BasedOn="{StaticResource lblOwned}">
                                            <Setter Property="Margin" Value="0,0,5,0"></Setter>
                                        </Style>
                                        <!-- Rectangle Style -->
                                        <Style TargetType="Rectangle">
                                            <Setter Property="Margin" Value="10,3,0,3"></Setter>
                                            <!-- usually 10,5,0,5-->
                                            <Setter Property="Height" Value="17"></Setter>
                                            <!-- usually 20 -->
                                            <Setter Property="Width" Value="30"></Setter>
                                            <Setter Property="Stroke" Value="Black"></Setter>
                                            <Setter Property="StrokeThickness" Value="2"></Setter>
                                        </Style>
                                        <Style TargetType="StackPanel" x:Key="PlayerPanel" BasedOn="{StaticResource panel_Background}">
                                            <Setter Property="Orientation" Value="Horizontal"></Setter>
                                        </Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush" Value="Black"></Setter>
                                            <Setter Property="BorderThickness" Value="2"></Setter>
                                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                            <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                            <Setter Property="Margin" Value="5,0,5,5"></Setter>
                                            <!-- usually 5,0,5,5 -->
                                        </Style>
                                    </StackPanel.Resources>
                                    <Border x:Name="brd_Player1" Margin="5">
                                        <!-- Usually 5 -->
                                        <StackPanel x:Name="panel_Player1" Style="{StaticResource PlayerPanel}">
                                            <Rectangle x:Name="rectPlayerColor1" Fill="LimeGreen"></Rectangle>
                                            <Label x:Name="lblPlayerName1" Content="Player 1" Style="{StaticResource lblPlayerName}"></Label>
                                            <Label Content="Territories Owned:" Style="{StaticResource lblBase}"></Label>
                                            <Label x:Name="lblPlayer1Territories" Style="{StaticResource lblOwned}"></Label>
                                            <Label Content="Army Strength:" Style="{StaticResource lblBase}"></Label>
                                            <Label x:Name="lblPlayer1Strength" Style="{StaticResource lblStrength}"></Label>
                                        </StackPanel>
                                    </Border>
                                    <Border x:Name="brd_Player2">
                                        <StackPanel x:Name="panel_Player2" Style="{StaticResource PlayerPanel}">
                                            <Rectangle x:Name="rectPlayerColor2" Fill="OrangeRed"></Rectangle>
                                            <Label x:Name="lblPlayerName2" Content="Player 2" Style="{StaticResource lblPlayerName}"></Label>
                                            <Label Content="Territories Owned:" Style="{StaticResource lblBase}"></Label>
                                            <Label x:Name="lblPlayer2Territories" Style="{StaticResource lblOwned}"></Label>
                                            <Label Content="Army Strength:" Style="{StaticResource lblBase}"></Label>
                                            <Label x:Name="lblPlayer2Strength" Style="{StaticResource lblStrength}"></Label>
                                        </StackPanel>
                                    </Border>
                                    <Border x:Name="brd_Player3" Visibility="Collapsed">
                                        <StackPanel x:Name="panel_Player3" Style="{StaticResource PlayerPanel}">
                                            <Rectangle x:Name="rectPlayerColor3" Fill="DeepSkyBlue" ></Rectangle>
                                            <Label x:Name="lblPlayerName3" Content="Player 3" Style="{StaticResource lblPlayerName}"></Label>
                                            <Label Content="Territories Owned:" Style="{StaticResource lblBase}"></Label>
                                            <Label x:Name="lblPlayer3Territories" Style="{StaticResource lblOwned}"></Label>
                                            <Label Content="Army Strength:" Style="{StaticResource lblBase}"></Label>
                                            <Label x:Name="lblPlayer3Strength" Style="{StaticResource lblStrength}"></Label>
                                        </StackPanel>
                                    </Border>
                                    <Border x:Name="brd_Player4" Visibility="Collapsed">
                                        <StackPanel x:Name="panel_Player4" Style="{StaticResource PlayerPanel}">
                                            <Rectangle x:Name="rectPlayerColor4" Fill="Gold" ></Rectangle>
                                            <Label x:Name="lblPlayerName4" Content="Player 4" Style="{StaticResource lblPlayerName}"></Label>
                                            <Label Content="Territories Owned:" Style="{StaticResource lblBase}"></Label>
                                            <Label x:Name="lblPlayer4Territories" Style="{StaticResource lblOwned}"></Label>
                                            <Label Content="Army Strength:" Style="{StaticResource lblBase}"></Label>
                                            <Label x:Name="lblPlayer4Strength" Style="{StaticResource lblStrength}"></Label>
                                        </StackPanel>
                                    </Border>
                                    <Border x:Name="brd_Player5" Visibility="Collapsed">
                                        <StackPanel x:Name="panel_Player5" Style="{StaticResource PlayerPanel}">
                                            <Rectangle x:Name="rectPlayerColor5" Fill="Gold"></Rectangle>
                                            <Label x:Name="lblPlayerName5" Content="Player 5" Style="{StaticResource lblPlayerName}"></Label>
                                            <Label Content="Territories Owned:" Style="{StaticResource lblBase}"></Label>
                                            <Label x:Name="lblPlayer5Territories" Style="{StaticResource lblOwned}"></Label>
                                            <Label Content="Army Strength:" Style="{StaticResource lblBase}"></Label>
                                            <Label x:Name="lblPlayer5Strength" Style="{StaticResource lblStrength}"></Label>
                                        </StackPanel>
                                    </Border>
                                    <Border x:Name="brd_Player6" Visibility="Collapsed">
                                        <StackPanel x:Name="panel_Player6" Style="{StaticResource PlayerPanel}">
                                            <Rectangle x:Name="rectPlayerColor6" Fill="Gold"></Rectangle>
                                            <Label x:Name="lblPlayerName6" Content="Player 6" Style="{StaticResource lblPlayerName}"></Label>
                                            <Label Content="Territories Owned:" Style="{StaticResource lblBase}"></Label>
                                            <Label x:Name="lblPlayer6Territories" Style="{StaticResource lblOwned}"></Label>
                                            <Label Content="Army Strength:" Style="{StaticResource lblBase}"></Label>
                                            <Label x:Name="lblPlayer6Strength" Style="{StaticResource lblStrength}"></Label>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                            <!-- Action Panels -->
                            <Border Margin="20,5,20,5" Style="{StaticResource brd_CornerCurve}" Width="260" Height="154">
                                <StackPanel VerticalAlignment="Center">
                                    <!-- Number Selection -->
                                    <StackPanel x:Name="panel_NumberSelection">
                                        <Button x:Name="btnStateDisp" Style="{StaticResource btnPresenter}" Margin="10,10,10,5" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" Background="#FF00B9FF" BorderThickness="2">GameState</Button>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <StackPanel.Resources>
                                                <Style TargetType="Button" BasedOn="{StaticResource btnCornerUI}">
                                                    <Setter Property="FontSize" Value="30"></Setter>
                                                    <Setter Property="FontWeight" Value="ExtraBold"></Setter>
                                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                                    <Setter Property="Width" Value="45"></Setter>
                                                    <Setter Property="Height" Value="45"></Setter>
                                                    <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                                    <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                                                    <Setter Property="Margin" Value="10"></Setter>
                                                    <Setter Property="BorderThickness" Value="2"></Setter>
                                                </Style>
                                            </StackPanel.Resources>
                                            <Button Click="Decrease">
                                                <Image Source="pack://siteoforigin:,,,/Images/minus.png" Margin="2"></Image>
                                            </Button>
                                            <Button x:Name="btnNumber" Style="{StaticResource btnCornerUI}" BorderThickness="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" Width="70" Height="45">0</Button>
                                            <Button  Click="Increase">
                                                <Image Source="pack://siteoforigin:,,,/Images/plus.png" Margin="2"></Image>
                                            </Button>
                                        </StackPanel>
                                        <Button x:Name="btnState" Style="{StaticResource btnCornerUI}" Margin="23,0,23,10" Width="200" Click="Confirm" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" Background="#FF4ACB00" BorderThickness="2">Confirm Action</Button>
                                    </StackPanel>
                                    <!-- Dice Roll -->
                                    <Grid x:Name="panel_Die" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                                        <Grid.Resources>
                                            <Style TargetType="Image">
                                                <Setter Property="Source" Value="pack://siteoforigin:,,,/Images/Dice/imgDice6.png"></Setter>
                                                <Setter Property="Height" Value="40"></Setter>
                                            </Style>
                                            <Style TargetType="Button" x:Key="btnDie" BasedOn="{StaticResource btnPresenter}">
                                                <Setter Property="Margin" Value="0"></Setter>
                                            </Style>
                                            <Style TargetType="Button" x:Key="btnPlayerDie">
                                            </Style>
                                            <Style TargetType="Button" x:Key="btnEnemyDie">
                                            </Style>
                                        </Grid.Resources>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <StackPanel>
                                            <Button x:Name="btnPlayerDie" Style="{StaticResource btnCornerUI}" Width="130" FontSize="14">Player Name</Button>
                                            <StackPanel x:Name="panel_Die_Player" Style="{StaticResource HorizontalCentred}" Margin="5,0,5,10">
                                                <Button Style="{DynamicResource btnPlayerDie}">
                                                    <Image x:Name="imgPlayerDie1"></Image>
                                                </Button>
                                                <Button Style="{DynamicResource btnPlayerDie}">
                                                    <Image x:Name="imgPlayerDie2"></Image>
                                                </Button>
                                                <Button Style="{DynamicResource btnPlayerDie}">
                                                    <Image x:Name="imgPlayerDie3"></Image>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <Button x:Name="btnEnemyDie" Style="{DynamicResource btnCornerUI}" Width="100" FontSize="14">Enemy name</Button>
                                            <StackPanel x:Name="panel_Die_Enemy" Style="{DynamicResource HorizontalCentred}" Margin="5,0,5,10">
                                                <Button Style="{DynamicResource btnEnemyDie}">
                                                    <Image x:Name="imgEnemyDie1"></Image>
                                                </Button>
                                                <Button Style="{DynamicResource btnEnemyDie}">
                                                    <Image x:Name="imgEnemyDie2"></Image>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                        <Button x:Name="btnDieStatus" Style="{DynamicResource btnCornerUI}" Grid.Row="1"  Grid.ColumnSpan="2"  Click="Attack_DieContinue">Dice Rolling...</Button>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            <!-- Action Buttons -->
                            <Border VerticalAlignment="Center" Margin="0,11"  Style="{StaticResource brd_CornerCurve}" Height="154">
                                <StackPanel VerticalAlignment="Center">
                                    <StackPanel.Resources>
                                        <Style TargetType="Button" BasedOn="{StaticResource btnCornerUI}">
                                            <Setter Property="Margin" Value="15,5,15,0"></Setter>
                                            <Setter Property="FontSize" Value="18"></Setter>
                                            <Setter Property="Width" Value="150"></Setter>
                                        </Style>
                                    </StackPanel.Resources>
                                    <Button Margin="15,0,15,0" Click="Continue">Continue</Button>
                                    <Button Click="Cancel">Cancel</Button>
                                    <Button Click="SaveGame">Save Game</Button>
                                    <Button Click="Settings">Settings - Help</Button>
                                </StackPanel>
                            </Border>
                            <TextBlock x:Name="txtOutput" Margin="20,11,10,10" HorizontalAlignment="Right" Width="350" Foreground="White" Background="Black" TextWrapping="Wrap"/>
                            <!-- Output Console -->
                        </StackPanel>
                    </Border>
                </StackPanel>
                <!-- Settings Panel -->
                <Viewbox x:Name="panel_Settings" Stretch="Uniform" Height="720" Visibility="Collapsed">
                    <DockPanel  Width="350">
                        <DockPanel.Resources>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="Black"></Setter>
                                <Setter Property="BorderThickness" Value="1"></Setter>
                                <Setter Property="Margin" Value="5"></Setter>
                            </Style>
                        </DockPanel.Resources>
                        <Label Style="{StaticResource lblHeader}" FontSize="12" DockPanel.Dock="Top">Settings:</Label>
                        <Border DockPanel.Dock="Right"  VerticalAlignment="Top">
                            <StackPanel Style="{StaticResource panel_Background}">
                                <StackPanel.Resources>
                                    <Style TargetType="StackPanel" BasedOn="{StaticResource HorizontalCentred}" x:Key="MusicControls">
                                        <Setter Property="Width" Value="145"></Setter>
                                        <Setter Property="Margin" Value="3"></Setter>
                                    </Style>
                                </StackPanel.Resources>
                                <Label Style="{StaticResource lblHeader}">Music:</Label>
                                <Label x:Name="lblMediaDetails" Style="{StaticResource lblSubHeading}"></Label>
                                <MediaElement x:Name="mediaplayer" Style="{StaticResource media_Music}"></MediaElement>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Style="{StaticResource btnMusicBack}"/>
                                    <Button Style="{StaticResource btnMusicPause}"/>
                                    <Button Style="{StaticResource btnMusicPlay}"/>
                                    <Button Style="{StaticResource btnMusicForward}"/>
                                </StackPanel>
                                <StackPanel Style="{StaticResource MusicControls}">
                                    <Label Style="{StaticResource lblSubHeading}" Height="24" Width="48">Volume:</Label>
                                    <Slider x:Name="slider_Volume"></Slider>
                                </StackPanel>
                                <StackPanel Style="{StaticResource MusicControls}">
                                    <Label Style="{StaticResource lblSubHeading}">Enabled:</Label>
                                    <CheckBox x:Name="chkMusicEnabled" Style="{StaticResource chkMusicEnabled}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <StackPanel DockPanel.Dock ="Left">
                            <Border>
                                <StackPanel Style="{StaticResource panel_Background}">
                                    <Label Style="{StaticResource lblHeader}">General:</Label>
                                    <StackPanel Style="{StaticResource HorizontalCentred}" Margin="5">
                                        <Label Style="{StaticResource lblSubHeading}" Width="75">Fullscreen:</Label>
                                        <CheckBox x:Name="chkFullscreen" Style="{StaticResource chkFullscreen}"></CheckBox>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <Border>
                                <StackPanel Style="{StaticResource panel_Background}">
                                    <Label Style="{StaticResource lblHeader}">Help:</Label>
                                    <StackPanel Style="{StaticResource HorizontalCentred}" Margin="5">
                                        <Label Style="{StaticResource lblSubHeading}" Width="75">In-Game hints:</Label>
                                        <CheckBox x:Name="chkHints" Style="{StaticResource chkHints}"></CheckBox>
                                    </StackPanel>
                                    <Button Style="{StaticResource btnHelp}" FontSize="12">Tutorial</Button>
                                    <!--Event Set in style-->
                                </StackPanel>
                            </Border>
                            <Button Style="{StaticResource btnCornerUI}" Click="Return">Return</Button>
                        </StackPanel>
                    </DockPanel>
                </Viewbox>
            </StackPanel>
        </Viewbox>
    </Border>
</Window>