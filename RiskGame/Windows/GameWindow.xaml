<Window x:Class="RiskGame.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RiskGame"
        mc:Ignorable="d"
        Title="GameWindow" Width="1280" Height="720" WindowStyle="None"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized" Style="{StaticResource windowResizeable}">
    <Border>
        <Border.Background>
            <VisualBrush Viewbox="0.05,0.05,0.9,0.9" Stretch="UniformToFill">
                <VisualBrush.Visual>
                    <Image Source="pack://siteoforigin:,,,/Resources/RiskBackground.jpg">
                        <Image.Effect>
                            <BlurEffect Radius="20" />
                        </Image.Effect>
                    </Image>
                </VisualBrush.Visual>
            </VisualBrush>
        </Border.Background>
        <Viewbox>
            <StackPanel Width="1280" Height="720">
                <!-- Main UI Panel -->
                <StackPanel x:Name="panel_MainUI" Background="LightBlue">
                    <!-- Game Grid -->
                    <Grid x:Name="GameGrid" Grid.Row="0" Grid.Column="1" Width="1080" Height="520">
                        <Grid.Resources>
                            <Style TargetType="Button" BasedOn="{StaticResource btnCornerUI}">
                                <Setter Property="BorderThickness" Value="3"></Setter>
                                <Setter Property="FontWeight" Value="Bold"></Setter>
                                <Setter Property="Background" Value="#CDECECEC"></Setter>
                                <Setter Property="Height" Value="24"></Setter>
                                <EventSetter Event="Click" Handler="Click"></EventSetter>
                                <EventSetter Event="MouseRightButtonDown" Handler="RightClick"></EventSetter>
                            </Style>
                        </Grid.Resources>
                        <Grid.Background>
                            <ImageBrush x:Name="img_Map" Stretch="Uniform" ImageSource="pack://siteoforigin:,,,/Images/Maps/NewYork.jpg"></ImageBrush>
                        </Grid.Background>
                        <Button x:Name="btnRockaway">Rockaway</Button>
