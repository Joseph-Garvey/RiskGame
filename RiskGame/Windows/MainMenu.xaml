<Window x:Class="RiskGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RiskGame"
        mc:Ignorable="d"
        Title="Login and Register" WindowStartupLocation="CenterScreen" Width="600" Height="600" >
    <Border>
        <Border.Background>
            <VisualBrush Viewbox="0.05,0.05,0.9,0.9" Stretch="UniformToFill">
                <VisualBrush.Visual>
                    <Image Source="pack://siteoforigin:,,,/Resources/RiskBackground.jpg">
                        <Image.Effect>
                            <BlurEffect Radius="20" />
                        </Image.Effect>
                    </Image>
                </VisualBrush.Visual>
            </VisualBrush>
        </Border.Background>
        <Viewbox Margin="10">
            <StackPanel>
                <Border BorderBrush="Black" CornerRadius="10" BorderThickness="1" Background="#66FFFFFF" Margin="5" Width="150" Height="60">
                    <Image Source="pack://siteoforigin:,,,/Images/RiskLogo.png"></Image>
                </Border>
                <StackPanel Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style TargetType="TextBox">
                            <Setter Property="Margin" Value="5"></Setter>
                            <Setter Property="BorderBrush" Value="Black"></Setter>
                        </Style>
                        <Style TargetType="TextBox" x:Key="showBox">
                            <Setter Property="Margin" Value="5"></Setter>
                            <Setter Property="BorderBrush" Value="Black"></Setter>
                            <Setter Property="Width" Value="110"></Setter>
                            <Setter Property="Visibility" Value="Collapsed"></Setter>
                            <EventSetter Event="TextChanged" Handler="ShowPassword_TextChanged"></EventSetter>
                        </Style>
                        <Style TargetType="PasswordBox" x:Key="pwdbox">
                            <Setter Property="Margin" Value="5"></Setter>
                            <Setter Property="BorderBrush" Value="Black"></Setter>
                            <Setter Property="Width" Value="110"></Setter>
                        </Style>
                        <Style TargetType="StackPanel" x:Key="panel_Background">
                            <Setter Property="Background" Value="#7F00D1FF"></Setter>
                        </Style>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="Black"></Setter>
                            <Setter Property="BorderThickness" Value="1"></Setter>
                            <Setter Property="Margin" Value="5"></Setter>
                        </Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type CheckBox}">
                                        <StackPanel Orientation="Horizontal">
                                            <Image x:Name="checkboxImage" Source="pack://siteoforigin:,,,/Images/show.png"/>
                                            <ContentPresenter/>
                                        </StackPanel>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="checkboxImage" Property="Source" Value="pack://siteoforigin:,,,/Images/hide.png"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>
                    <Border>
                        <StackPanel Style="{StaticResource panel_Background}">
                            <StackPanel.Resources>
                                <Style TargetType="PasswordBox" BasedOn="{StaticResource pwdbox}">
                                    <EventSetter Event="KeyDown" Handler="RegisterKeyDown"></EventSetter>
                                </Style>
                            </StackPanel.Resources>
                            <Label Style="{StaticResource lblHeader}" Width="140">Register</Label>
                            <StackPanel Orientation="Horizontal">
                                <Label Style="{StaticResource lblSubHeading}" Width="110">Username:</Label>
                                <Button Style="{StaticResource btnUI}" Width="25" Margin="0,0,5,0" ToolTip="Usernames must be 3-10 characters, unique and consist of letters, numbers and separator characters.">?</Button>
                            </StackPanel>
                            <TextBox x:Name="txtRegName" TabIndex="0" KeyDown="RegisterKeyDown"></TextBox>
                            <StackPanel Orientation="Horizontal">
                                <Label Style="{StaticResource lblSubHeading}" Width="110">Password:</Label>
                                <Button Style="{StaticResource btnUI}" Width="25" Margin="0,0,5,0" ToolTip="Passwords must be 8-20 characters and consist of letters, numbers and symbols. Passwords must contain at least one capital letter, number and symbol.">?</Button>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <PasswordBox x:Name="txtRegPass" Style="{StaticResource pwdbox}" GotKeyboardFocus="ClearPwdText" TabIndex="1" KeyDown="RegisterKeyDown"></PasswordBox>
                                <TextBox x:Name="txtRegPassShow" Style="{StaticResource showBox}"></TextBox>
                                <Button x:Name="btnRegPassToggle" Style="{StaticResource btnCornerUI}" Width="25" Margin="0,5,5,5">
                                    <CheckBox x:Name="chkRegPass" Height="14" Click="ShowHidePassword"></CheckBox>
                                </Button>
                            </StackPanel>
                            <Label Style="{StaticResource lblSubHeading}">Confirm Password:</Label>
                            <StackPanel Orientation="Horizontal">
                                <PasswordBox x:Name="txtRegPassConf"  Style="{StaticResource pwdbox}" GotKeyboardFocus="ClearPwdText" TabIndex="2" KeyDown="RegisterKeyDown"></PasswordBox>
                                <TextBox x:Name="txtRegPassConfShow" Style="{StaticResource showBox}"></TextBox>
                                <Button Style="{StaticResource btnCornerUI}" Width="25" Margin="0,5,5,5">
                                    <CheckBox x:Name="chkRegPassConf" Height="14" Click="ShowHidePassword"></CheckBox>
                                </Button>
                            </StackPanel>
                            <Button Style="{StaticResource btnUI}" Click="Register" TabIndex="3">Register</Button>
                        </StackPanel>
                    </Border>
                    <StackPanel>
                        <Border>
                            <StackPanel Style="{StaticResource panel_Background}">
                                <StackPanel.Resources>
                                    <Style TargetType="PasswordBox" BasedOn="{StaticResource pwdbox}">
                                        <EventSetter Event="KeyDown" Handler="LoginKeyDown"></EventSetter>
                                    </Style>
                                </StackPanel.Resources>
                                <Label Style="{StaticResource lblHeader}" Width="130">Login</Label>
                                <Label Style="{StaticResource lblSubHeading}">Username:</Label>
                                <TextBox x:Name="txtLogName" TabIndex="4" KeyDown="LoginKeyDown"></TextBox>
                                <Label Style="{StaticResource lblSubHeading}">Password:</Label>
                                <StackPanel Orientation="Horizontal">
                                    <PasswordBox x:Name="txtLogPass" Style="{StaticResource pwdbox}" Width="100" GotKeyboardFocus="ClearPwdText" TabIndex="5" KeyDown="LoginKeyDown"></PasswordBox>
                                    <TextBox x:Name="txtLogPassShow" Style="{StaticResource showBox}"></TextBox>
                                    <Button Style="{StaticResource btnCornerUI}" Width="25" Margin="0,5,5,5">
                                        <CheckBox x:Name="chkLogPass" Height="14" Click="ShowHidePassword"></CheckBox>
                                    </Button>
                                </StackPanel>
                                <Button Style="{StaticResource btnUI}" Click="Login" TabIndex="6">Login</Button>
                            </StackPanel>
                        </Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button Style="{StaticResource btnCornerUI}" HorizontalAlignment="Center" Width="100" FontSize="12" Click="Leaderboard" TabIndex="7">Leaderboard</Button>
                            <Button Style="{StaticResource btnCornerUI}" HorizontalAlignment="Center" Grid.Column="1" TabIndex="8" >
                                <Image Source="pack://siteoforigin:,,,/Images/Settingsicon.png" Height="20" Margin="5"></Image>
                            </Button>
                        </Grid>
                    </StackPanel>
                </StackPanel>
                <Label x:Name="lblError" Style="{StaticResource lblError}" Width="290" Visibility="Collapsed" >
                    <TextBlock x:Name="txtError" TextWrapping="Wrap">Error message</TextBlock>
                </Label>
                <Label x:Name="lblSuccess" Style="{StaticResource lblSuccess}" Width="290" Visibility="Collapsed" >
                    <TextBlock x:Name="txtSuccess" TextWrapping="Wrap">Success message</TextBlock>
                </Label>
            </StackPanel>
        </Viewbox>
    </Border>
</Window>
