<Window x:Class="RiskGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RiskGame"
        mc:Ignorable="d"
        Title="Login and Register" WindowStartupLocation="CenterScreen" Height="800" Width="800">
    <Border>
        <Border.Background>
            <VisualBrush Viewbox="0.05,0.05,0.9,0.9" Stretch="UniformToFill">
                <VisualBrush.Visual>
                    <Image Source="pack://siteoforigin:,,,/Resources/RiskBackground.jpg">
                        <Image.Effect>
                            <BlurEffect Radius="20" />
                        </Image.Effect>
                    </Image>
                </VisualBrush.Visual>
            </VisualBrush>
        </Border.Background>
        <Viewbox>
            <StackPanel>
                <Border BorderBrush="Black" CornerRadius="5" BorderThickness="1" Background="#7F00D1FF" Margin="5" Width="150" Height="60">
                    <Image Source="pack://siteoforigin:,,,/Images/RiskLogo.png"></Image>
                </Border>
                <StackPanel Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style TargetType="TextBox">
                            <Setter Property="Margin" Value="5"></Setter>
                            <Setter Property="BorderBrush" Value="Black"></Setter>
                        </Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Margin" Value="5"></Setter>
                            <Setter Property="BorderBrush" Value="Black"></Setter>
                            <Setter Property="PasswordChar" Value="*"></Setter>
                        </Style>
                        <Style TargetType="StackPanel" x:Key="panel_Background">
                            <Setter Property="Background" Value="#7F00D1FF"></Setter>
                        </Style>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="Black"></Setter>
                            <Setter Property="BorderThickness" Value="1"></Setter>
                            <Setter Property="Margin" Value="5"></Setter>
                        </Style>
                    </StackPanel.Resources>
                    <Border>
                        <StackPanel Style="{StaticResource panel_Background}">
                            <StackPanel Orientation="Horizontal">
                                <Label Style="{StaticResource lblHeader}" Width="100">Register</Label>
                                <Button Style="{StaticResource btnUI}" Width="25">?</Button>
                            </StackPanel>
                            <Label Style="{StaticResource lblSubHeading}">Username:</Label>
                            <TextBox></TextBox>
                            <Label Style="{StaticResource lblSubHeading}">Password:</Label>
                            <PasswordBox></PasswordBox>
                            <Label Style="{StaticResource lblSubHeading}">Confirm Password:</Label>
                            <PasswordBox></PasswordBox>
                            <Button Style="{StaticResource btnUI}">Register</Button>
                        </StackPanel>
                    </Border>
                    <StackPanel>
                        <Border>
                            <StackPanel Style="{StaticResource panel_Background}">
                                <StackPanel Orientation="Horizontal">
                                    <Label Style="{StaticResource lblHeader}" Width="100">Login</Label>
                                    <Button Style="{StaticResource btnUI}" Width="25">?</Button>
                                </StackPanel>
                                <Label Style="{StaticResource lblSubHeading}">Username:</Label>
                                <TextBox></TextBox>
                                <Label Style="{StaticResource lblSubHeading}">Password:</Label>
                                <PasswordBox></PasswordBox>
                                <Button Style="{StaticResource btnUI}">Login</Button>
                            </StackPanel>
                        </Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button Style="{StaticResource btnCornerUI}" HorizontalAlignment="Center" Width="100" FontSize="12">Leaderboard</Button>
                            <Button Style="{StaticResource btnCornerUI}" HorizontalAlignment="Center" Grid.Column="1">
                                <Image Source="pack://siteoforigin:,,,/Images/Settingsicon.png" Height="20" Margin="5"></Image>
                            </Button>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Viewbox>
    </Border>
</Window>
