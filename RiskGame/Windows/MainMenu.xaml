<Window x:Class="RiskGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RiskGame"
        mc:Ignorable="d"
        Title="RiskGame" WindowStartupLocation="CenterScreen" Height="600" Width="800">
    <Border>
        <Border.Background>
            <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/RiskBackground.jpg" Stretch="UniformToFill"/>
        </Border.Background>
        <Viewbox>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Image Source="/Images/RiskLogo.png" Grid.ColumnSpan="2" Height="200"></Image>
                <StackPanel Grid.Row="1">
                    <TextBlock VerticalAlignment="Center" FontSize="48" HorizontalAlignment="Center" Margin="20,10,20,10">
                        <TextBlock.Effect>
                            <DropShadowEffect/>
                        </TextBlock.Effect><Run Foreground="White" Text="Registration"/>
                    </TextBlock>
                    <TextBlock Margin="80,0,0,10" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="36">
                        <TextBlock.Effect>
                            <DropShadowEffect/>
                        </TextBlock.Effect><Run Foreground="White" Text="Username:"/></TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="txtRegName" HorizontalAlignment="Center" Margin="90,0,0,0" Height="40" TextWrapping="Wrap" Text="Enter Username" VerticalAlignment="Center" Width="312" FontSize="24" Grid.Row="2" GotKeyboardFocus="ClearDefautText"/>
                    <Button x:Name="btn_usrtooltip" Content="?" FontSize="24" ToolTip="Usernames must be 3-10 characters, not already in use and consist of letters, numbers and separator characters." Width="40" Height="40"/>
                </StackPanel>
                <TextBlock Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="36" Margin="80,0,20,10">
                        <TextBlock.Effect>
                            <DropShadowEffect/>
                        </TextBlock.Effect><Run Foreground="White" Text="Password:"/></TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <PasswordBox MaxLength="21" Height="40" Width="312"  Margin="89.3333,0,0,0" FontSize="24" Name="txtRegPass" PasswordChar="*" GotKeyboardFocus="ClearPwdText"></PasswordBox>
                        <Button Content="?" FontSize="24" ToolTip="Passwords must be 8-20 characters and consist of letters, numbers and symbols. Passwords must contain at least one capital letter, number and symbol." Width="40" Height="40"/>
                    </StackPanel>
                    <TextBlock Margin="80,0,20,10" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="36">
                        <TextBlock.Effect>
                            <DropShadowEffect/>
                        </TextBlock.Effect><Run Foreground="White" Text="Confirm Password:"/></TextBlock>
                    <PasswordBox MaxLength="21" Height="40" Width="312"  FontSize="24" Name="txtRegPassConf" PasswordChar="*" GotKeyboardFocus="ClearPwdText"></PasswordBox>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                        <Button Content="Register" HorizontalAlignment="Center" Margin="180,0,40,0" VerticalAlignment="Top" Width="148" FontSize="24" Height="46" Background="#7F00D1FF" BorderBrush="Black" Click="Register"></Button>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1">
                    <TextBlock VerticalAlignment="Center" FontSize="48" HorizontalAlignment="Center" Margin="20,10,20,10">
                        <TextBlock.Effect>
                            <DropShadowEffect/>
                        </TextBlock.Effect><Run Foreground="White" Text="Login"/></TextBlock>
                    <TextBlock Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="36" Margin="80,0,20,10">
                        <TextBlock.Effect>
                            <DropShadowEffect/>
                        </TextBlock.Effect><Run Foreground="White" Text="Username:"/></TextBlock>
                    <TextBox x:Name="txtLogName" HorizontalAlignment="Center" Height="40" TextWrapping="Wrap" Text="Enter Username" VerticalAlignment="Center" Width="312" FontSize="24" Grid.Row="2" GotKeyboardFocus="ClearDefautText"/>
                    <TextBlock Margin="80,0,20,10" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="36">
                        <TextBlock.Effect>
                            <DropShadowEffect/>
                        </TextBlock.Effect><Run Foreground="White" Text="Password:"/></TextBlock>
                    <PasswordBox MaxLength="21" Height="40" Width="312"  FontSize="24" Name="txtLogPass" PasswordChar="*" GotKeyboardFocus="ClearPwdText"></PasswordBox>
                    <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                        <Button Content="Login" HorizontalAlignment="Center" Margin="110,0,40,0" VerticalAlignment="Top" Width="148" FontSize="24" Height="46" Background="#7F00D1FF" BorderBrush="Black" Click="Login"/>

                    </StackPanel>
                    <Button Content="DEVUSER" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Width="148" FontSize="24" Height="46" Background="#7F00D1FF" BorderBrush="Black" Click="Login"/>
                </StackPanel>
                <TextBlock x:Name="txtError" Text="Error Message"  Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"  Grid.ColumnSpan="2" Background="Red" TextAlignment="Center" Height="60" Width="900" Foreground="White"/>
            </Grid>
        </Viewbox>
    </Border>
</Window>
